// Prisma schema for D1 database
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Better Auth User model
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  phone         String?
  name          String?
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // Better Auth admin plugin fields
  role          String   @default("user")
  banned        Boolean  @default(false)
  banReason     String?
  banExpires    DateTime?

  sessions Session[]
  accounts Account[]
  // Better Auth organization plugin relations
  memberships     Member[]
  invitationsSent Invitation[]

  @@map("users")
}

// Better Auth Session model
model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  // Better Auth Organization plugin: current "active" org for the session.
  activeOrganizationId String?
  // Better Auth admin plugin: ID of admin user impersonating this session.
  impersonatedBy String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

// Better Auth Account model
model Account {
  id                     String   @id @default(uuid())
  accountId              String
  providerId             String
  userId                 String
  accessToken            String?
  refreshToken           String?
  idToken                String?
  accessTokenExpiresAt   DateTime?
  refreshTokenExpiresAt  DateTime?
  scope                  String?
  password               String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
  @@index([userId])
}

// Better Auth Verification model
model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
  @@index([identifier])
}

// Used by the Better Auth JWT plugin to persist key pairs for JWKS.
model Jwks {
  id        String   @id @default(uuid())
  publicKey String
  privateKey String
  createdAt DateTime @default(now())
  expiresAt DateTime?
  alg       String?
  crv       String?

  @@map("jwks")
  @@index([createdAt])
  @@index([expiresAt])
}

// --- Better Auth Organization plugin tables ---

model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  logo      String?
  // Stored as JSON string (Better Auth serializes/deserializes for you).
  metadata  String?
  createdAt DateTime @default(now())

  members     Member[]
  invitations Invitation[]

  @@map("organizations")
  @@index([slug])
}

model Member {
  id             String       @id @default(uuid())
  organizationId String
  userId         String
  role           String       @default("member")
  createdAt      DateTime     @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("members")
  @@index([organizationId])
  @@index([userId])
  @@unique([organizationId, userId])
}

model Invitation {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  role           String
  status         String       @default("pending")
  expiresAt      DateTime
  createdAt      DateTime     @default(now())
  inviterId      String

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  inviter      User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@map("invitations")
  @@index([organizationId])
  @@index([email])
  @@index([inviterId])
}
